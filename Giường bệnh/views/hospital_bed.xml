<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
               <notebook>
               <page string="Thông tin chi tiết giường bệnh" name="Detailed Tnformation" >
                     <group name="ttctgb">
                        <group>
                            <field name="bn_image"/>
                            <field name="ten"/>
                            <field name="tuoi"/>
                            <field name="gioitinh"/>
                            <field name="chuandoan"/>
                        </group>
                        <group>
                            <field name="thoigian_nhapvien"/>
                            <field name="songay_nhapvien"/>
                            <field name="bacsi_phutrach"/>
                            <field name="phongbenh"/>
                            <field name="note"/>
                        </group>
                     </group>
               </page>
               </notebook>
                <xpath expr="//field[@name='sale_ok']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='purchase_ok']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='sale_ok']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='purchase_ok']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                  <xpath expr="//page[@name='purchase']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='list_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <field name="barcode" position="before">
                    <field name="id_bed"/>
                </field>
                <field name="barcode" position="after">
                    <field name="loai"/>
                </field>
                <field name="barcode" position="after">
                    <field name="chucnang"/>
                </field>
                <field name="barcode" position="after">
                    <field name="trangthai"/>
                </field>
                <field name="trangthai" position="after">
                    <field name="chatlieu"/>
                </field>
                <xpath expr="//group[@name='group_standard_price']" position="inside">
                    <field name="chieudai"/>
                    <field name="chieurong"/>
                    <field name="chieucao"/>
                    <field name="trongluong"/>
                    <field name="taitrong"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Tên giường bệnh</attribute>
                </xpath>

            </field>
        </record>
        <record id="hospital_bed_act" model="ir.actions.act_window">
            <field name="name">HospitalBed</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban,activity</field>
        </record>
        <!--        tao menu -->
        <menuitem id="menu_hospital"
                  name="Hospital"
                  action="hospital_bed_act"
                  sequence="0"
                  groups="base.group_user"/>
        <menuitem id="menu_hospital_bed"
                  parent="menu_hospital"
                  name="HospitalBed"
                  action="hospital_bed_act"
                  sequence="1"/>
    </data>
</odoo>