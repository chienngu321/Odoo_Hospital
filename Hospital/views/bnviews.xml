<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="my_patients_form_view" model="ir.ui.view">
            <field name="name">my.patients.form.view</field>
            <field name="model">my.patients</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="benhnhan_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="bn_image" string="Ảnh thẻ" widget="image"/>
                            </group>
                            <group>
                                <field name="ten"/>
                                <field name="tuoi"/>
                                <field name="gioitinh"/>
                                <field name="ngaysinh"/>
                                <field name="nghenghiep"/>
                                <field name="diachi"/>
                                <field name="sdthoai"/>
                                <field name="sotheBHYT"/>
                                <field name="noicap"/>
                                <field name="dt"/>
                                <field name="cmnd"/>
                                <field name="Dantoc"/>
                            </group>
                        </group>
                        <group name="images">
                            <group>
                                <field name="chieucao"/>
                                <field name="cannang"/>
                                <field name="mau"/>
                            </group>
                            <group>
                                <field name="khoadt"/>
                                <field name="bacsi"/>
                                <field name="tgvaovien"/>
                                <field name="tgravien"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="general_information" string="Thông tin bệnh lý">
                                <group name="ttbl">
								    <group>
                                        <field name="benhchinh"/>
                                        <field name="benhphu"/>
                                    </group>
                                    <group>
                                        <field name="tinhtrang"/>
                                        <field name="Huongdt"/>
								    </group>
                                </group>
							</page>
							<page name="additional_information" string="Thông tin người thân">
								<group name="ttnt">
                                    <group>
									    <field name="tennt"/>
                                        <field name="quanhe"/>
                                    </group>
                                    <group>
                                        <field name="sdt"/>
                                        <field name="diac"/>
                                    </group>
								</group>
							</page>
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_patients_tree_view" model="ir.ui.view">
            <field name="name">my.patients.tree.view</field>
            <field name="model">my.patients</field>
            <field name="arch" type="xml">
                <tree string="Patients" default_order="create_date asc">
                    <field name="benhnhan_id"/>
                    <field name="ten"/>
                    <field name="tuoi"/>
                    <field name="gioitinh"/>
                    <field name="ngaysinh"/>
                    <field name="sotheBHYT"/>
                    <field name="noicap"/>
                    <field name="dt"/>
                    <field name="cmnd"/>
                    <field name="nghenghiep"/>
                    <field name="diachi"/>
                    <field name="sdthoai"/>
                    <field name="Dantoc"/>
                    <field name="chieucao"/>
                    <field name="cannang"/>
                    <field name="mau"/>
                    <field name="tgvaovien"/>
                    <field name="khoadt"/>
                    <field name="bacsi"/>
                    <field name="benhchinh"/>
                    <field name="benhphu"/>
                    <field name="tgravien"/>
                    <field name="tinhtrang"/>
                    <field name="Huongdt"/>
                    <field name="tennt"/>
                    <field name="quanhe"/>
                    <field name="sdt"/>
                    <field name="diac"/>
                    <field name="bn_image"/>
                </tree>
            </field>
        </record>
