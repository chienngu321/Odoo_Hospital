<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product.template.inherit" model="ir.ui.view">
            <field name="name">product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Tên giường</attribute>
                </xpath>
                <field name="name" position="before">
                    <field name="id_bed"/>
                </field>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="string">Loại giường</attribute>
                </xpath>
                <field name="type" position="before">
                    <field name="chucnang"/>
                </field>
                <xpath expr="//field[@name='sale_ok']" position="replace">
                    <!-- empty -->
                </xpath>
                <xpath expr="//field[@name='purchase_ok']" position="replace">
                    <!-- empty -->
                </xpath>
                <xpath expr="//field[@name='categ_iđ']" position="replace">
                    <!-- empty -->
                </xpath>
                <xpath expr="//field[@name='list_price']" position="replace">
                    <!-- empty -->
                </xpath>
                <xpath expr="//field[@name='taxes_id']" position="replace">
                    <!-- empty -->
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="replace">
                    <!-- empty -->
                </xpath>
                <xpath expr="//page[1]" position="inside">
                <group>
                    <field name="id_bed"/>
                    <field name="chucnang"/>
                    <field name="trangthai"/>
                    <field name="chatlieu"/>
                </group>
                </xpath>
                <xpath expr="//page[2]" position="inside">
                <group>
                    <field name="chieudai"/>
                    <field name="chieurong"/>
                    <field name="chieucao"/>
                    <field name="trongluong"/>
                    <field name="taitrong"/>
                </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>